<Window x:Class="QLCAFE_WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:i = "http://schemas.microsoft.com/expression/2010/interactivity"
         xmlns:local="clr-namespace:QLCAFE_WPF.Viewmodel"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="MainWindow" Height="500" Width="500">
    <Window.DataContext>
        <local:MainViewModel x:Name="ds"></local:MainViewModel>
    </Window.DataContext>
    <Window.Resources>

        <local:intToColor x:Key="con" ></local:intToColor>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding close}" 
                                   CommandParameter="{Binding ElementName=FloatingPasswordBox}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="File">
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="File">
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl>
                <TabItem Header="Bàn">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock Text="fdfdf"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Admin">
                    <Grid Background="#FFE5E5E5">
                        <TextBlock><Run Text="123"/><Run Text=" "/><InlineUIContainer>
                        		<ComboBox Width="120" ItemsSource="{Binding Obs}" SelectedValue="{Binding Ac}">
                        			<ComboBox.ItemTemplate>  
                        				<DataTemplate>  
                        					<WrapPanel Orientation="Horizontal">  
                                                <Button Background="Aqua" Content="{Binding id}">
                                                    
                                                </Button>
                        						
                                                <!--<TextBlock Text="{Binding id}"/>  
                        						<TextBlock Text=" - "/>  
                        						<TextBlock Text="{Binding UserName}"/> --> 
                        					</WrapPanel>  
                        				</DataTemplate>  
                        			</ComboBox.ItemTemplate> 
                        		</ComboBox>
                        	</InlineUIContainer><Run Text=" "/><InlineUIContainer>
                        		<ListView Height="420" Width="346" ItemsSource="{Binding Obs}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                        			 
                                    <ListBox.ItemTemplate>
                                       
                                        <DataTemplate>
                                            
                                            <StackPanel Orientation="Vertical">
                                                <!--<Image Source="{Binding Image}" Stretch="None"/>-->
                                                <Button Content="{Binding id}" Background="{Binding id, Converter={StaticResource con}}" Width="50" Height="50"  Command="{Binding Clickbutton}">
                                                    
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel IsItemsHost="True" Orientation="Horizontal"  />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                        		</ListView>
                        	</InlineUIContainer></TextBlock>
                    </Grid>

                </TabItem>
            </TabControl>

        </Grid>
    </DockPanel>

</Window>
